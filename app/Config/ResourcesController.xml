<?xml version="1.0"?>
<packages>
    <package name="MyPackage" lang="js" path="/app/webroot/js/mypackage" forcecompression="true">
        <import>
            <file>OtherPackage:speciallib</file>
            <package>CoolLibrary</package>
        </import>
        <files>
            <file name="myscript">
                <requires>OtherPackage:otherscript</requires>
            </file>
            <file name="no_requirements" />
        </files>
    </package>
    

    <!-- ======================= -->
    <!-- ! Javascript Packages   -->
    <!-- ======================= -->
    
    <!-- ! Dependencies -->
    <package name="Dependencies" lang="js" path="../javascript/dep">
        <files>
            <file name="bootstrap" />
            <file name="jstorage" />
            <file name="raphael" />
            <file name="onhashchange" />
            <file name="milkbox" />
        </files>
    </package>
    
    <!-- ! UIKit (Gideon's infant library) -->
    <package name="UIKit" lang="js" path="../javascript/uikit">
        <files>
            <file name="UI" />
            <file name="UIActivityIndicator" />
        </files>
    </package>
    
    <!-- ! BaseJS -->
    <package name="KordsJS" lang="js" path="../javascript/core">
        <files>
            <file name="RoomFilterController" />
            <file name="SelectNavigation" />
            <file name="Thumbs" />
            <file name="DeleteModal" />
            <file name="RoomNavigator" />
        </files>
    </package>

    <!-- ================ -->
    <!-- ! CSS Packages   -->
    <!-- ================ -->

    <!-- ! Core -->
    <package name="BaseCSS" lang="css" path="../../design/css/screen">
        <files>
            <!-- Auxiliary Files -->
            <file name="typography" />
            <file name="lists" />
            <file name="forms" />
            
            <!-- Base CSS Rules -->
            <file name="base" />
            
            <!-- Page Specifics -->
            <file name="homepage" />
            <file name="rooms" />

            <!-- Components -->
            <file name="milkbox" />
        </files>
    </package>
</packages>