<?xml version="1.0" encoding="utf-8"?>
<packager>
	<!-- ======================= -->
	<!-- ! Javascript Packages   -->
	<!-- ======================= -->
	
	<!-- ! Dependencies -->
	<package name="Dependencies" language="js">
		<source dir="software/javascript/dep">
			<file>bootstrap.js</file>
			<file>raphael.js</file>
			<file>onhashchange.js</file>
			<file>milkbox.js</file>
		</source>
		<output dir="software/site/app/webroot/js/">
			<file license="false" compression="enabled">dep.js</file>
			<file license="false">dep-nocompression.js</file>
		</output>
	</package>
	
	<!-- ! UIKit (Gideon's infant library) -->
	<package name="UIKit" language="js">
		<source dir="software/javascript/uikit">
			<file>UI.js</file>
			<file>UIActivityIndicator.js</file>
		</source>
		<output dir="software/site/app/webroot/js/">
			<file license="false" compression="enabled">uikit.js</file>
			<file license="false">uikit-nocompression.js</file>
		</output>
	</package>
	
	<!-- ! BaseJS -->
	<package name="KordsJS" language="js">
		<source dir="software/javascript/core">
			<file>RoomFilterController.js</file>
			<file>SelectNavigation.js</file>
		</source>
		<output dir="software/site/app/webroot/js/">
			<file license="false" compression="enabled">core.js</file>
			<file license="false">core-nocompression.js</file>
		</output>
	</package>

	
	<!-- ================ -->
	<!-- ! CSS Packages   -->
	<!-- ================ -->

	<!-- ! Core -->
	<package name="BaseCSS" language="css">
		<source dir="design/css/screen">
			<!-- Auxiliary Files -->
			<file>typography.css</file>
			<file>lists.css</file>
			<file>forms.css</file>
			
			<!-- Base CSS Rules -->
			<file>base.css</file>
			
			<!-- Page Specifics -->
			<file>homepage.css</file>
			<file>rooms.css</file>

			<!-- Components -->
			<file>milkbox.css</file>
		</source>
		<output dir="software/site/app/webroot/css/">
			<file license="false" compression="enabled">screen.css</file>
			<file license="false">screen-nocompression.css</file>
		</output>
	</package>
</packager>
